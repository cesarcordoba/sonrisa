.camapanas(ng-init="obtenerCampanas()")
    md-card
        md-card-content(layout="row")
            md-autocomplete(
            md-selected-item="ctrl.selectedCampana" 
            md-search-text-change="ctrl.BuscarCampanaChange(ctrl.searchTextCampana)" 
            md-search-text="ctrl.searchTextCampana" 
            md-selected-item-change="ctrl.CampanaSeleccionadoChange(item)" 
            md-items="item in campanas" 
            md-item-text="item.nombre" 
            md-min-length="0" 
            placeholder="Nombre de la campaña" 
            md-menu-class="autocomplete-custom-template"
            flex)
                md-item-template
                    span {{item.nombre}}
            md-button(md-colors="{background: 'green'}" ng-click="CampanaDialog()")
                md-icon add
    md-toolbar
        .md-toolbar-tools
            h4 Lista de Campañas
    md-card-content(layout="column")
        md-list
            md-list-item(ng-repeat="campana in campanas | filter: ctrl.searchTextCampana" ui-sref="campana({idCampana:campana.id})")
                .md-list-item-tex
                    h1 {{campana.id}}
                    h4 {{campana.nombre}}   
